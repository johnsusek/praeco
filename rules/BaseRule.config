# BaseRule.config - Global configuration for all ElastAlert2 rules
# This file contains common settings that will be applied to every rule created in Praeco.
# Any configuration option you put here will be inherited by all rules.
# See https://elastalert2.readthedocs.io/en/latest/configuration.html for all available options.

# ===== EMAIL SETTINGS =====
# SMTP configuration for email alerts
smtp_host: ""              # SMTP server hostname (e.g., "smtp.gmail.com")
smtp_port: 587             # SMTP port (587 for TLS, 465 for SSL, 25 for unencrypted)
smtp_ssl: false            # Use SSL for SMTP connection
smtp_auth_file: ""         # Path to file containing SMTP username and password
from_addr: ""              # Email address to send alerts from
email_reply_to: ""         # Reply-to email address

# ===== SLACK SETTINGS =====
slack_webhook_url: ""                    # Slack webhook URL for notifications
slack_emoji_override: ":postal_horn:"   # Default emoji for Slack messages
slack_username_override: "Praeco"       # Default username for Slack messages
slack_channel_override: ""              # Default channel for Slack messages (e.g., "#alerts")
slack_msg_color: "danger"               # Default color for Slack message attachments

# ===== MATTERMOST SETTINGS =====
mattermost_webhook_url: ""              # Mattermost webhook URL
mattermost_proxy: ""                    # HTTP proxy for Mattermost
mattermost_ignore_ssl_errors: false     # Ignore SSL certificate errors
mattermost_icon_url_override: ""        # Custom icon URL
mattermost_msg_pretext: ""              # Message pretext

# ===== MICROSOFT TEAMS SETTINGS =====
ms_teams_webhook_url: ""                # Microsoft Teams webhook URL
ms_teams_alert_summary: ""              # Alert summary for Teams notifications
ms_teams_proxy: ""                      # HTTP proxy for Teams
ms_teams_alert_fixed_width: false       # Use fixed-width font in Teams messages

# ===== TELEGRAM SETTINGS =====
telegram_bot_token: ""                  # Telegram bot token
telegram_proxy: ""                      # HTTP proxy for Telegram
telegram_proxy_login: ""                # Proxy username
telegram_proxy_pass: ""                 # Proxy password

# ===== DISCORD SETTINGS =====
discord_webhook_url: ""                 # Discord webhook URL
discord_embed_color: 0xE24D42          # Color for Discord embeds

# ===== PAGERDUTY SETTINGS =====
pagerduty_service_key: ""               # PagerDuty service key
pagerduty_client_name: "Praeco"         # Client name for PagerDuty alerts
pagerduty_ca_certs: ""                  # CA certificates file path
pagerduty_ignore_ssl_errors: false      # Ignore SSL certificate errors

# ===== JIRA SETTINGS =====
jira_server: ""                         # JIRA server URL
jira_project: ""                        # JIRA project key
jira_issue_type: ""                     # JIRA issue type
jira_account_file: ""                   # Path to JIRA credentials file

# ===== VICTOROPS SETTINGS =====
victorops_api_key: ""                   # VictorOps API key
victorops_routing_key: ""               # VictorOps routing key
victorops_proxy: ""                     # HTTP proxy for VictorOps

# ===== ALERTMANAGER SETTINGS =====
alertmanager_hosts: []                  # List of Alertmanager hosts
alertmanager_api_version: "v1"          # Alertmanager API version
alertmanager_labels: {}                 # Default labels for alerts
alertmanager_annotations: {}            # Default annotations for alerts
alertmanager_fields: {}                 # Default fields for alerts

# ===== DINGTALK SETTINGS =====
dingtalk_access_token: ""               # DingTalk access token
dingtalk_sign: ""                       # DingTalk signature
dingtalk_btns: []                       # DingTalk buttons configuration

# ===== GOOGLECHAT SETTINGS =====
googlechat_webhook_url: ""              # Google Chat webhook URL
googlechat_header_subtitle: ""          # Header subtitle for messages
googlechat_header_image: ""             # Header image URL
googlechat_footer_kibanalink: ""        # Footer Kibana link

# ===== STOMP SETTINGS =====
stomp_hostname: ""                      # STOMP server hostname
stomp_hostport: ""                      # STOMP server port
stomp_login: ""                         # STOMP login
stomp_password: ""                      # STOMP password
stomp_ssl: false                        # Use SSL for STOMP connection

# ===== ZABBIX SETTINGS =====
zbx_sender_host: ""                     # Zabbix sender host
zbx_sender_port: 10051                  # Zabbix sender port

# ===== THEHIVE SETTINGS =====
hive_connection:
  hive_host: ""                         # TheHive server URL
  hive_port: ""                         # TheHive server port
  hive_apikey: ""                       # TheHive API key
  hive_verify: false                    # Verify SSL certificates
  hive_proxies:
    http: ""                            # HTTP proxy
    https: ""                           # HTTPS proxy

# ===== ROCKETCHAT SETTINGS =====
rocket_chat_webhook_url: ""             # Rocket.Chat webhook URL
rocket_chat_username_override: ""       # Username override
rocket_chat_channel_override: ""        # Channel override
rocket_chat_emoji_override: ""          # Emoji override

# ===== GITTER SETTINGS =====
gitter_webhook_url: ""                  # Gitter webhook URL

# ===== COMMAND SETTINGS =====
pipe_match_json: false                  # Pipe match data as JSON to command
pipe_alert_text: false                  # Pipe alert text to command

# ===== GENERAL ALERT SETTINGS =====
alert_text_type: "alert_text_only"      # Type of alert text to use
alert_text_args: []                     # Arguments for alert text formatting
alert_subject_args: []                  # Arguments for alert subject formatting

# ===== KIBANA SETTINGS =====
generate_kibana_discover_url: false     # Generate Kibana Discover URLs
kibana_discover_app_url: ""             # Kibana Discover app URL
kibana_discover_version: ""             # Kibana version
kibana_discover_index_pattern_id: ""    # Index pattern ID

# ===== ELASTICSEARCH SETTINGS =====
# Note: These are typically set in the main elastalert.yaml config,
# but can be overridden per rule if needed
# es_host: "elasticsearch"
# es_port: 9200
# es_username: ""
# es_password: ""
# use_ssl: false
# verify_certs: true

